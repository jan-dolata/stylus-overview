m_contactBar($class-name = "contactBar")
  .{$class-name}
    {block}
    z-index: 101

    & ^[0]__content
      relative: top -40px
      width: 100vw
      z-index: 2
      display: flex
      transition: bottom .3s

      &.is-animate // JS
        bottom: 2px

      a
        tertiary-button()
        link()

        &:hover,
        &:focus
          colors: $contact-bar-color-3 $contact-bar-color-2
          box-shadow: $contact-bar-box-shadow

      > a
        &:not(.full) // JS
          width: 50%
          float: left
          display: block

        &:not(.full):last-of-type
          border-left: 2px solid $contact-bar-color-2

        &.opened // JS
          colors: $contact-bar-color-3 $contact-bar-color-2
          box-shadow: $contact-bar-box-shadow

        &.opened ~ ^[0]__optionsContainer,
        &.opened ~ ^[0]__optionsLayer
          display: block

      & ^[0]__optionsContainer,
      & ^[0]__optionsLayer
        display: none

      & ^[0]__optionsLayer
        fixed: top
        size: 100% calc(100% - 40px)

      & ^[0]__optionsContainer
        width: 50%
        absolute: bottom 38px right

      & ^[0]__optionsContainer a
        display: block
        margin-bottom: 2px

      &^[0]--wide > a
        width: 100%

        & + ^[0]__optionsLayer ^[0]__optionsContainer
          width: 100%

m_contactBar()
