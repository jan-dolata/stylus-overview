// @import 'gui/*'

display-and-position($type, $pos)
  display: $type
  $length = length($pos)
  if $pos in (full all)
    top: 0
    left: 0
    right: 0
    bottom: 0
  else
    for $item, $i in $pos
      if $item in (top bottom left right)
        if ($i+1) < $length && typeof($pos[$i+1]) == 'unit'
          {$item}: $pos[$i+1]
        else
          {$item}: 0

absolute($args...)
  display-and-position(absolute, $args)

fixed($args...)
  display-and-position(fixed, $args)

relative($args...)
  display-and-position(relative, $args)

size($width, $height = $width)
  width: $width
  height: $height

colors($text, $bg, $border = $bg)
  background-color: $contact-bar-color-2
  border-color: $contact-bar-color-2
  color: $contact-bar-color-3

$contact-bar-color-1 = $quaternary-color-1
$contact-bar-color-2 = $quaternary-color-2
$contact-bar-color-3 = $white-color
$contact-bar-box-shadow = 0 2px $contact-bar-color-2

